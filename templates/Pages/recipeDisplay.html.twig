{% extends 'base.html.twig' %}

{% block title %}TastyTable{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/recipeDisplay.css') }}">
{% endblock %}

{% block body %}
    <main>
        <!-- USER RECIPES -->
        {% if APIFlag==0 %}
        <div class="container">
            <!-- From db -->
            <aside>
                <div class="image">
                    {% if recipe.picturePath %}
                        <img src="{{ asset('style/images/recipeImages/' ~ recipe.picturePath) }}" alt="Recipe Image" style="width: 280px; height: 280px; object-fit: cover;">
                    {% else %}
                        <img src="{{ asset('style/images/placeholderImage.jpeg') }}" alt="Recipe Image" style="width: 280px; height: 280px; object-fit: cover;">
                    {% endif %}
                </div>
                <!-- Servings calculator -->
                <div class="below-image">
                    <div class="servings">
                        <h2>Servings</h2>
                        <button id="decrease-servings" onclick="adjustServings(-1)"><i class="fas fa-minus"></i></button>
                        <span id="servings" data-initial="{{ recipe.servings }}">{{ recipe.servings }}</span>
                        <button id="increase-servings" onclick="adjustServings(1)"><i class="fas fa-plus"></i></button>
                    </div>
                    <!-- Ingredients -->
                    <div class="ingredients">
                        {% if recipe.ingredients is not empty %}
                            <h2>Ingredients</h2>
                            <ul id="ingredients-list">
                                {% for index, ingredient in recipe.ingredients %}
                                    <li>
                                        {% if recipe.ingredientsAmounts[index] is not null %}
                                            <span class="ingredient-amount" data-original-amount="{{ recipe.ingredientsAmounts[index] }}">
                                                {{ recipe.ingredientsAmounts[index] }} {{ recipe.ingredientsUnits[index] }}
                                                {% if recipe.ingredientsUnits[index] is not empty %} of {% endif %}
                                            </span>
                                        {% endif %}
                                        {{ ingredient }}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p>No ingredients found.</p>
                        {% endif %}
                    </div>
                    <!-- Comments Section -->
                    <div>
                        <h2>Comments</h2>
                        <p>Okay that shit was bussin fr fr<br>
                            -Chewbacca's uncle<br>
                        </p>
                        <!-- Display comments dynamically here -->
                        <!-- Add your own comment -->
                        <textarea id="comment" placeholder="Add your comment"></textarea><br>
                        <button onclick="addComment()">Add Comment</button>
                    </div>
                </div>
            </aside>
                <!-- Recipe Info -->
                <div class="right-side">
                    <div class="recipeInfo">
                        <h2>{{ recipe.recipeName }}</h2>
                        <p>{{ recipe.recipeDescription }}</p>
                        <p>Cooking Time: {{ recipe.time }} minutes &nbsp; | &nbsp; Calories: {{ recipe.calories }} kcal</p>
                        <p>Fats: {{ recipe.fat }}g &nbsp; | &nbsp; Carbs: {{ recipe.carbs }}g &nbsp; | &nbsp; Proteins: {{ recipe.protein }}g</p>
                        <p>Price range:
                            {% if recipe.cost == 1 %}
                                €
                            {% elseif recipe.cost == 2 %}
                                €€
                            {% elseif recipe.cost == 3 %}
                                €€€
                            {% endif %}
                            &nbsp; | &nbsp; Rating: ★★★★★
                        </p>
                    </div>

                    <!-- Instructions -->
                    <div>
                        <h2>Instructions</h2>
                        {% if recipe.instructions is not empty %}
                            <div>
                                {% for step in recipe.instructions %}
                                    <strong>Step {{ loop.index }}:</strong><br>{{ step }}<br><br>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p>No instructions found.</p>
                        {% endif %}
                        {% if followFlag %}
                            <a href="{{ path('SaveRecipeDisplay', {'id': recipe.id, 'save': '3','isApi':APIFlag}) }}" style="display: inline-block; padding: 10px 20px; font-size: 16px; font-weight: bold; text-align: center; color: white; background-color: #b2b2b2; border: none; border-radius: 5px; text-decoration: none;">
                                <h3 style="margin: 0; padding: 0; color: black">Follow Owner </h3>
                            </a>
                        {% endif %}

                        {% if SaveFlag %}
                            <a href="{{ path('SaveRecipeDisplay', {'id': recipe.id, 'save': '1','isApi':APIFlag}) }}" style="display: inline-block; padding: 10px 20px; font-size: 16px; font-weight: bold; text-align: center; color: white; background-color: #b2b2b2; border: none; border-radius: 5px; text-decoration: none;">
                                <h3 style="margin: 0; padding: 0; color: black">Save Recipe </h3>
                            </a>

                        {% else %}
                            <a href="{{ path('SaveRecipeDisplay', {'id': recipe.id, 'save': '0','isApi':APIFlag}) }}" style="display: inline-block; padding: 10px 20px; font-size: 16px; font-weight: bold; text-align: center; color: white; background-color: #b2b2b2; border: none; border-radius: 5px; text-decoration: none;">
                                <h3 style="margin: 0; padding: 0; color: black">Delete Recipe </h3>
                            </a>
                        {% endif %}
                    </div>

                    <!-- Buttons to interact with recipe -->
                    <div class="buttons-container">
                        <button class="mark-as-done" onclick="markAsDone()">Mark as Done</button>
                        <!-- Only the user who made the recipe can edit or delete it -->
                        {% if userId == recipe.userId %}
                            <button class="edit-recipe" onclick="editRecipe()">Edit Recipe</button>
                            <button class="delete-recipe" onclick="deleteRecipe()">Delete Recipe</button>
                        {% endif %}
                    </div>


                </div>
            </div>

            <!-- API RECIPES -->
        {% else %}
            <div class="container">
                <!-- Recipe Image -->
                <aside>
                    <div class="image">
                        <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                    </div>

                    <!-- Servings calculator -->
                    <div class="below-image">
                        <div class="servings">
                            <h2>Servings</h2>
                            <button id="decrease-servings" onclick="adjustServings(-1)"><i class="fas fa-minus"></i></button>
                            <span id="servings" data-initial="{{ recipe.servings }}">{{ recipe.servings }}</span>
                            <button id="increase-servings" onclick="adjustServings(1)"><i class="fas fa-plus"></i></button>
                        </div>

                        <!-- Ingredients -->
                        <div class="ingredients">
                            {% if recipe.extendedIngredients is not empty %}
                                <h2>Ingredients:</h2>
                                <ul id="ingredients-list">
                                    {% for ingredient in recipe.extendedIngredients %}
                                        <li>
                                            <span class="ingredient-amount" data-original-amount="{{ ingredient.amount }}">
                                                {{ ingredient.amount }} {{ ingredient.unit }} of
                                            </span>
                                            {{ ingredient.originalName }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p>No ingredients found.</p>
                            {% endif %}
                        </div>

                        <!-- Comments Section -->
                        <div>
                            <h2>Comments</h2>
                            <p>Okay that shit was bussin fr fr<br>
                                -Chewbacca's uncle<br>
                            </p>
                            <!-- Display comments dynamically here -->
                            <!-- Add your own comment -->
                            <textarea id="comment" placeholder="Add your comment"></textarea><br>
                            <button onclick="addComment()">Add Comment</button>
                        </div>



                    </div>
                    {% if SaveFlag %}
                        <a href="{{ path('SaveRecipeDisplay', {'id': recipe.id, 'save': '1','isApi':APIFlag}) }}" style="display: inline-block; padding: 10px 20px; font-size: 16px; font-weight: bold; text-align: center; color: white; background-color: #b2b2b2; border: none; border-radius: 5px; text-decoration: none;">
                            <h3 style="margin: 0; padding: 0; color: black">Save Recipe </h3>
                        </a>

                    {% else %}

                        <a href="{{ path('SaveRecipeDisplay', {'id': recipe.id, 'save': '0','isApi':APIFlag}) }}" style="display: inline-block; padding: 10px 20px; font-size: 16px; font-weight: bold; text-align: center; color: white; background-color: #b2b2b2; border: none; border-radius: 5px; text-decoration: none;">
                            <h3 style="margin: 0; padding: 0; color: black">Delete Recipe </h3>
                        </a>

                    {% endif %}
                    {% if followFlag %}
                    <a href="{{ path('SaveRecipeDisplay', {'id': recipe.id, 'save': '3','isApi':APIFlag}) }}" style="display: inline-block; padding: 10px 20px; font-size: 16px; font-weight: bold; text-align: center; color: white; background-color: #b2b2b2; border: none; border-radius: 5px; text-decoration: none;">
                        <h3 style="margin: 0; padding: 0; color: black">Delete Recipe </h3>
                    </a>
                    {% endif %}

                </aside>

                <!-- Recipe Info -->
                <div class="right-side">
                    <div class="recipeInfo">
                        <h2>{{ recipe.title }}</h2>
                        <p>{{ recipe.summary|raw }}</p>
                        <p>Price range:
                            {% if recipe.pricePerServing < 50 %}
                                €
                            {% elseif recipe.pricePerServing < 100 %}
                                €€
                            {% else %}
                                €€€
                            {% endif %}
                            &nbsp; | &nbsp; Rating: {{ recipe.spoonacularScore }}
                        </p>
                    </div>

                    <!-- Instructions -->
                    <div>
                        <h2>Instructions</h2>
                        {% if recipe.analyzedInstructions is not empty %}
                            <div>
                                {% for instruction in recipe.analyzedInstructions %}
                                    {% for step in instruction.steps %}
                                        <strong>Step {{ step.number }}:</strong><br>{{ step.step }}<br><br>
                                    {% endfor %}
                                {% endfor %}
                            </div>
                        {% else %}
                            <p>No instructions found.</p>
                        {% endif %}
                    </div>

                    <!-- Buttons to like recipe and mark as done -->
                    <div>
                        <button onclick="likeRecipe()">Like</button>
                        <button onclick="markAsDone()">Mark as Done</button>
                    </div>
                </div>
            </div>

        {% endif %}
    </main>

    <div id="footer"></div>

    <script>
        $(function(){
            $("#header").load("Header.html");
            $("#footer").load("Footer.html");
        });

        function adjustServings(change) {
            let servingsElement = document.getElementById('servings');
            let initialServings = parseFloat(servingsElement.getAttribute('data-initial'));
            let currentServings = parseFloat(servingsElement.innerText);
            let newServings = currentServings + change;

            if (newServings < 1) return; // Prevent servings from going below 1

            servingsElement.innerText = newServings;

            let ingredientElements = document.querySelectorAll('.ingredient-amount');

            ingredientElements.forEach(element => {
                let originalAmount = parseFloat(element.getAttribute('data-original-amount'));
                if (!isNaN(originalAmount)) { // Check if originalAmount is not NaN (i.e., it's a valid number)
                    let unit = element.innerText.split(' ')[1]; // Extract the unit
                    let newAmount = (originalAmount * newServings) / initialServings;
                    element.innerText = `${newAmount.toFixed(1)} ${unit}`; // Round to the first decimal place
                    if (unit) {
                        element.innerText += " of "; // Add "of" if unit is present
                    }
                }
            });
        }

        function markAsDone() {
            alert('Recipe marked as done!');
        }

        function deleteRecipe() {
            if (confirm('Are you sure you want to delete this recipe? This action cannot be undone.')) {
                alert('Recipe has been deleted!');
                window.location.href = "{{ path('recipe_delete', {'id': recipe.id}) }}";
            } else {
                alert('Recipe deletion canceled.');
            }
        }


        function editRecipe() {
            window.location.href = "{{ path('recipe_edit', {'id': recipe.id}) }}";
        }

        function addComment() {
            let comment = document.getElementById('comment').value;
            if (comment.trim() !== "") {
                // Here you would add your logic to save the comment, e.g., send it to the server
                alert('Comment added: ' + comment);
                document.getElementById('comment').value = ''; // Clear the textarea
            } else {
                alert('Please enter a comment.');
            }
        }
    </script>
{% endblock %}
